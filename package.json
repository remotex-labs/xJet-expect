{
    "name": "@remotex-labs/xjet-expect",
    "main": "dist/cjs/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/esm/index.js",
    "author": "Garefild",
    "version": "1.0.0-local",
    "license": "Mozilla Public License Version 2.0",
    "description": "xJet-Expect: Powerful Assertions for Seamless xJet Testing",
    "homepage": "https://github.com/remotex-labs/xJet-expect",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/remotex-labs/xJet-expect.git"
    },
    "bugs": {
        "url": "https://github.com/remotex-labs/xJet-expect/issues"
    },
    "keywords": [
        "jet",
        "xjet",
        "test",
        "jest",
        "mocha",
        "watch",
        "testing",
        "mocking",
        "jasmine",
        "coverage",
        "typescript"
    ],
    "engines": {
        "node": ">=20"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "dev": "xbuild -w",
        "lint": "xbuild --tc && eslint . -c ./eslint.config.mjs",
        "build": "xbuild",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "preci:test": "xbuild",
        "ci:test": "jest",
        "ci:clean": "rm -rf ./dist",
        "ci:build": "npm run build",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "jest": "^30.0.5",
        "eslint": "^9.33.0",
        "vitepress": "^1.6.4",
        "typescript-eslint": "^8.39.1",
        "eslint-plugin-tsdoc": "^0.4.0",
        "eslint-plugin-perfectionist": "^4.15.0",
        "vitepress-versioning-plugin": "^1.3.0",
        "@swc/jest": "^0.2.39",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.0",
        "@remotex-labs/xbuild": "1.6.0"
    },
    "dependencies": {
        "@remotex-labs/xansi": "^1.0.2"
    }
}
