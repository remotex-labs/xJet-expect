{
    "name": "@remotex-labs/xjet-expect",
    "main": "dist/cjs/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/esm/index.js",
    "author": "Garefild",
    "version": "1.0.0-local",
    "license": "Mozilla Public License Version 2.0",
    "description": "xJet-Expect: Powerful Assertions for Seamless xJet Testing",
    "homepage": "https://remotex-labs.github.io/xJet-expect/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/remotex-labs/xJet-expect.git"
    },
    "bugs": {
        "url": "https://github.com/remotex-labs/xJet-expect/issues"
    },
    "keywords": [
        "jet",
        "xjet",
        "test",
        "jest",
        "mocha",
        "watch",
        "testing",
        "mocking",
        "jasmine",
        "coverage",
        "typescript"
    ],
    "engines": {
        "node": ">=20"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "dev": "xbuild -w",
        "build": "xbuild",
        "test": "xjet",
        "test:coverage": "xjet --coverage",
        "preci:test": "xbuild",
        "lint": "npm run lint:md && npm run lint:eslint && npm run lint:typescript",
        "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore \"node_modules/**\"",
        "lint:eslint": "eslint . -c ./eslint.config.mjs",
        "lint:typescript": "xbuild --tc",
        "ci:test": "xjet",
        "ci:clean": "rm -rf ./dist",
        "ci:build": "npm run build",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "eslint": "^9.37.0",
        "vitepress": "^2.0.0-alpha.12",
        "markdownlint-cli": "^0.45.0",
        "typescript-eslint": "^8.45.0",
        "eslint-plugin-tsdoc": "^0.4.0",
        "eslint-plugin-perfectionist": "^4.15.0",
        "@types/node": "^24.6.2",
        "@viteplus/versions": "^2.0.2",
        "@remotex-labs/xjet": "^1.2.0",
        "@remotex-labs/xbuild": "1.6.0"
    },
    "dependencies": {
        "@remotex-labs/xansi": "^1.3.3"
    }
}
